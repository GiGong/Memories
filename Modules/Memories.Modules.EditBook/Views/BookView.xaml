<UserControl x:Class="Memories.Modules.EditBook.Views.BookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:Memories.Core;assembly=Memories.Core"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Viewbox HorizontalAlignment="Right" Grid.Column="0">
            <Border BorderBrush="Black" BorderThickness="1">
                <ContentControl Width="{Binding EditBook.PageWidth, FallbackValue=148}" Height="{Binding EditBook.PageHeight, FallbackValue=210}"
                                prism:RegionManager.RegionName="{x:Static core:RegionNames.LeftPageRegion}" prism:RegionManager.RegionContext="{Binding LeftPage}"/>
            </Border>
        </Viewbox>

        <Viewbox HorizontalAlignment="left" Grid.Column="1">
            <Border BorderBrush="Black" BorderThickness="1">
                <ContentControl Width="{Binding EditBook.PageWidth, FallbackValue=148}" Height="{Binding EditBook.PageHeight, FallbackValue=210}"
                                prism:RegionManager.RegionName="{x:Static core:RegionNames.RightPageRegion}" prism:RegionManager.RegionContext="{Binding RightPage}"/>
            </Border>
        </Viewbox>
        
        <Grid Width="150" Height="25" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12">
            
            <Button Content="←" Command="{Binding PageBackCommand}" Width="25" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding CurrentPage, FallbackValue=5}" Width="25" Margin="45,0,80,0"/>
            <TextBlock Text="/" Width="5"/>
            <TextBlock Text="{Binding TotalPage, FallbackValue=27}" Width="25" Margin="80,0,45,0"/>
            <Button Content="→" Command="{Binding PageForwardCommand}" Width="25" HorizontalAlignment="Right" />

        </Grid>

    </Grid>
</UserControl>
